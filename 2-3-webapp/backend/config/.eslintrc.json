{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
				"ecmaVersion": 2017,
				"sourceType": "module",
				"ecmaFeatures": {
					"experimentalObjectRestSpread": true
				}
    },
     "plugins": [
				"mocha"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
				],
				"no-unused-vars": "warn",
				"rules": {
    			"mocha/no-exclusive-tests": "error"
  			}
    }
}